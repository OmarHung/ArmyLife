<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/design_snackbar_background_color"
    android:id="@+id/linear">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txt_month"
            android:layout_marginTop="50dp"
            android:textColor="#D3D4D4"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#D3D4D4"></LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/img_spot"
            android:src="@drawable/othermonths" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#D3D4D4"></LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/linearLayout_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColor="#D3D4D4"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_3000"
                android:textSize="15sp"
                android:textColor="#D3D4D4"
                android:gravity="right"
                android:paddingRight="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_1"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#D3D4D4"
                android:id="@+id/textView10"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D3D4D4"
                android:id="@+id/txt_push"
                android:textSize="15sp"
                android:gravity="right"
                android:paddingRight="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_2"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#D3D4D4"
                android:id="@+id/textView11"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_sit"
                android:textSize="15sp"
                android:textColor="#D3D4D4"
                android:gravity="right"
                android:paddingRight="16dp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>