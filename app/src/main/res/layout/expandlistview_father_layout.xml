<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:gravity="center_vertical"
    android:focusable="false"
    android:descendantFocusability= "blocksDescendants">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv"
        android:src="@drawable/fs_close"
        android:layout_marginLeft="8dp"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="聯絡人"
        android:id="@+id/lblListHeader"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:focusable="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:descendantFocusability= "blocksDescendants">

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/img_button_line"
            android:src="@drawable/line_icon_black"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:focusable="false"
            android:layout_toLeftOf="@+id/img_button_message"
            android:layout_marginRight="8dp" />

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/img_button_message"
            android:background="#00ffffff"
            android:src="@drawable/fs_message"
            android:scaleType="fitXY"
            android:focusable="false"
            android:layout_toLeftOf="@+id/img_button_phone"
            android:layout_marginRight="8dp" />

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/img_button_phone"
            android:src="@drawable/fs_phone"
            android:background="#00ffffff"
            android:focusable="false"
            android:scaleType="fitXY"
            android:layout_toLeftOf="@+id/img_button_edit"
            android:layout_marginRight="8dp" />

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/img_button_edit"
            android:src="@drawable/fs_pencil"
            android:background="#00ffffff"
            android:focusable="false"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
